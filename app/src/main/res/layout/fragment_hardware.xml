<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hardware Status Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/black_80"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System Status"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <View
                        android:id="@+id/systemStatusIndicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/status_indicator_offline"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/systemStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checking system..."
                        android:textColor="@color/white_70"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/dispenserStatusIndicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/status_indicator_offline"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/dispenserStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checking dispenser..."
                        android:textColor="@color/white_70"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Slot Management Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/black_80"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slot Management"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Slot Navigation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/slotPreviousButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="‹"
                        android:textSize="20sp"
                        style="@style/AdminButtonStyle" />

                    <TextView
                        android:id="@+id/currentSlotText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Slot 1"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/slotNextButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="›"
                        android:textSize="20sp"
                        style="@style/AdminButtonStyle" />

                </LinearLayout>

                <!-- Slot Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp">

                        <View
                            android:id="@+id/slotStatusIndicator"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/status_indicator_offline"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/slotStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading..."
                            android:textColor="@color/white_70"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/slotBottleCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bottles: --"
                        android:textColor="@color/white_70"
                        android:textSize="14sp"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/slotMotorStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Motor: --"
                        android:textColor="@color/white_70"
                        android:textSize="14sp"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:id="@+id/slotSensorStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sensor: --"
                        android:textColor="@color/white_70"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Slot Controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/resetSlotButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reset Slot"
                        android:layout_marginEnd="8dp"
                        style="@style/AdminButtonStyle" />

                    <Button
                        android:id="@+id/calibrateSlotButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Calibrate"
                        android:layout_marginStart="8dp"
                        style="@style/AdminButtonStyle" />

                </LinearLayout>

                <Button
                    android:id="@+id/resetAllSlotsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset All Slots"
                    style="@style/AdminButtonStyle" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Dispenser Controls Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/black_80"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dispenser Controls"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/testDispenserButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Test Dispenser"
                        android:layout_marginEnd="8dp"
                        style="@style/AdminButtonStyle" />

                    <Button
                        android:id="@+id/primeSystemButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Prime System"
                        android:layout_marginStart="8dp"
                        style="@style/AdminButtonStyle" />

                </LinearLayout>

                <Button
                    android:id="@+id/emergencyStopButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚠ EMERGENCY STOP"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/admin_error"
                    style="@style/AdminButtonStyle" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Diagnostics Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/black_80"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diagnostics"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/runFullDiagnosticsButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Full Diagnostics"
                        android:layout_marginEnd="4dp"
                        style="@style/AdminButtonStyle" />

                    <Button
                        android:id="@+id/checkSensorsButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Check Sensors"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        style="@style/AdminButtonStyle" />

                    <Button
                        android:id="@+id/testMotorsButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Test Motors"
                        android:layout_marginStart="4dp"
                        style="@style/AdminButtonStyle" />

                </LinearLayout>

                <Button
                    android:id="@+id/clearErrorsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clear All Errors"
                    android:layout_marginBottom="12dp"
                    style="@style/AdminButtonStyle" />

                <TextView
                    android:id="@+id/diagnosticsResultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Run diagnostics to see results..."
                    android:textColor="@color/white_70"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:background="@color/black"
                    android:padding="8dp"
                    android:minHeight="100dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
