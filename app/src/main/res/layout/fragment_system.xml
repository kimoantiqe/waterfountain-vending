<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- System Information -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/black_80"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System Information"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/systemVersionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version: 1.0.0"
                    android:textColor="@color/white_70"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/systemUptimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uptime: --"
                    android:textColor="@color/white_70"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/systemMemoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Memory: --"
                    android:textColor="@color/white_70"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/systemStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System ready"
                    android:textColor="@color/admin_accent"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Timeout Settings -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/black_80"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timeout Settings"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Inactivity Timeout (seconds)"
                    android:textColorHint="@color/white_70"
                    app:boxStrokeColor="@color/white"
                    app:hintTextColor="@color/white_70">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inactivityTimeoutInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Session Timeout (seconds)"
                    android:textColorHint="@color/white_70"
                    app:boxStrokeColor="@color/white"
                    app:hintTextColor="@color/white_70">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/sessionTimeoutInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/saveTimeoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Timeout Settings"
                    android:layout_marginTop="12dp"
                    style="@style/AdminButtonStyle" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- System Toggles -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/black_80"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System Configuration"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Kiosk Mode"
                        android:textColor="@color/white_70"
                        android:textSize="14sp" />

                    <Switch
                        android:id="@+id/kioskModeToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Demo Mode"
                        android:textColor="@color/white_70"
                        android:textSize="14sp" />

                    <Switch
                        android:id="@+id/demoModeToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Debug Mode"
                        android:textColor="@color/white_70"
                        android:textSize="14sp" />

                    <Switch
                        android:id="@+id/debugModeToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Maintenance Mode"
                        android:textColor="@color/white_70"
                        android:textSize="14sp" />

                    <Switch
                        android:id="@+id/maintenanceModeToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- System Controls -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/black_80"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System Controls"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/restartSystemButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Restart System"
                        android:layout_marginEnd="8dp"
                        style="@style/AdminButtonStyle" />

                    <Button
                        android:id="@+id/exitAdminButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Exit Admin"
                        android:layout_marginStart="8dp"
                        style="@style/AdminButtonStyle" />

                </LinearLayout>

                <Button
                    android:id="@+id/returnToMainButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Return to Main Screen"
                    android:layout_marginBottom="12dp"
                    style="@style/AdminButtonStyle" />

                <Button
                    android:id="@+id/emergencyShutdownButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚠ EMERGENCY SHUTDOWN"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/admin_error"
                    style="@style/AdminButtonStyle" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Maintenance -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/black_80"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maintenance"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/updateFirmwareButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Update Firmware"
                        android:layout_marginEnd="4dp"
                        style="@style/AdminButtonStyle" />

                    <Button
                        android:id="@+id/scheduledMaintenanceButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Schedule Maintenance"
                        android:layout_marginStart="4dp"
                        style="@style/AdminButtonStyle" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/backupSettingsButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Backup Settings"
                        android:layout_marginEnd="8dp"
                        style="@style/AdminButtonStyle" />

                    <Button
                        android:id="@+id/restoreSettingsButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Restore Settings"
                        android:layout_marginStart="8dp"
                        style="@style/AdminButtonStyle" />

                </LinearLayout>

                <Button
                    android:id="@+id/factoryResetButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚠ FACTORY RESET"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/admin_error"
                    style="@style/AdminButtonStyle" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
