<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/modal_background"
    android:padding="40dp"
    android:gravity="center">

    <!-- Close X Button - Top Right -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <ImageButton
            android:id="@+id/closeConsentButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#555555"
            android:padding="12dp"
            android:visibility="gone"/>

    </RelativeLayout>

    <!-- Custom Image at top -->
    <ImageView
        android:id="@+id/consentIcon"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/consent_image"
        android:contentDescription="Privacy Icon"
        android:layout_marginBottom="32dp"
        android:scaleType="fitCenter"/>

    <!-- Title -->
    <TextView
        android:id="@+id/consentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Verification Code?"
        android:textSize="@dimen/modal_title_size"
        android:textColor="#555555"
        android:fontFamily="@font/inter"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Message -->
    <TextView
        android:id="@+id/consentMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By agreeing, you consent to receiving a verification code for authentication."
        android:textSize="@dimen/modal_text_size"
        android:textColor="#555555"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:lineSpacingMultiplier="1.15"
        android:layout_marginBottom="16dp"/>

    <!-- Privacy link -->
    <TextView
        android:id="@+id/consentPrivacyLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="waterfountain.com/privacy"
        android:textSize="@dimen/modal_text_size"
        android:textColor="#8B7BA8"
        android:fontFamily="@font/inter"
        android:layout_marginBottom="40dp"/>

    <!-- Buttons container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <!-- Cancel Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            style="@style/GlassActionButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="72dp"
            android:text="Cancel"
            android:textSize="@dimen/modal_button_text_size"
            android:layout_marginEnd="12dp"
            android:paddingHorizontal="24dp"/>

        <!-- Agree & Send Button (Purple) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAgree"
            style="@style/GlassActionButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="72dp"
            android:text="Agree &amp; Send"
            android:textSize="@dimen/modal_button_text_size"
            android:textColor="#FFFFFF"
            android:background="@drawable/consent_button_purple"
            android:layout_marginStart="12dp"
            android:paddingHorizontal="24dp"/>

    </LinearLayout>

</LinearLayout>
