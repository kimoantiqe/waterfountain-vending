<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/main_screen_padding">

        <!-- Header with Back Button and Centered Wordmark -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp">

            <!-- Back Button - Positioned absolutely on the left -->
            <ImageButton
                android:id="@+id/closeButton"
                android:layout_width="@dimen/back_button_size"
                android:layout_height="@dimen/back_button_size"
                android:layout_gravity="start|center_vertical"
                android:alpha="0.9"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back_button"
                android:padding="@dimen/back_button_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_arrow_back"
                app:tint="@android:color/white" />

            <!-- Centered Wordmark Only (matching main activity exactly) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/waterfountain_wordmark"
                android:ellipsize="end"
                android:fontFamily="@font/century_gothic_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:letterSpacing="-0.09"
                android:maxLines="1"
                android:paddingHorizontal="16dp"
                android:singleLine="true"
                android:text="@string/wordmark_text"
                android:textColor="@android:color/white"
                android:textSize="72sp" />

        </FrameLayout>

        <!-- Main Content Area - Properly centered with upward adjustment -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipChildren="false"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="100dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Title - Unified Gray (matching MainActivity) -->
                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:letterSpacing="0.01"
                    android:text="How It Works"
                    android:textColor="#555555"
                    android:textStyle="bold"
                    android:shadowColor="#40FFFFFF"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="3"
                    android:textSize="68sp" />

                <!-- Subtitle - Unified Gray (matching MainActivity) -->
                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="80dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:letterSpacing="0.01"
                    android:text="Tap on any card to learn more"
                    android:textColor="#555555"
                    android:shadowColor="#40FFFFFF"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textSize="36sp" />

                <!-- Privacy Cards - Vertical Stack -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="80dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- Card 1: Free Water -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="48dp"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <LinearLayout
                            android:id="@+id/card1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/glass_card_background"
                            android:clickable="true"
                            android:elevation="@dimen/card_elevation"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="40dp">

                            <!-- Icon -->
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginEnd="32dp"
                                android:contentDescription="Money icon"
                                android:src="@drawable/money" />

                            <!-- Text Content -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <!-- Card title -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="12dp"
                                    android:fontFamily="sans-serif-medium"
                                    android:letterSpacing="-0.01"
                                    android:text="How is it free?"
                                    android:textColor="#555555"
                                    android:textSize="44sp" />

                                <!-- Description -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:text="Sponsored by local businesses"
                                    android:textColor="#555555"
                                    android:alpha="0.7"
                                    android:textSize="28sp" />

                            </LinearLayout>

                            <!-- Arrow button -->
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="20dp"
                                android:contentDescription="Learn more"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="#555555" />

                        </LinearLayout>

                    </FrameLayout>

                    <!-- Card 2: Privacy Policy -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="48dp"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <LinearLayout
                            android:id="@+id/card2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/glass_card_background"
                            android:clickable="true"
                            android:elevation="@dimen/card_elevation"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="40dp">

                            <!-- Icon -->
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginEnd="32dp"
                                android:contentDescription="Shield icon"
                                android:src="@drawable/shield" />

                            <!-- Text Content -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <!-- Card title -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="12dp"
                                    android:fontFamily="sans-serif-medium"
                                    android:letterSpacing="-0.01"
                                    android:text="Why your number?"
                                    android:textColor="#555555"
                                    android:textSize="44sp" />

                                <!-- Description -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:text="Fair usage: 2 free waters per day"
                                    android:textColor="#555555"
                                    android:alpha="0.7"
                                    android:textSize="28sp" />

                            </LinearLayout>

                            <!-- Arrow button -->
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="20dp"
                                android:contentDescription="Learn more"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="#555555" />

                        </LinearLayout>

                    </FrameLayout>

                    <!-- Card 3: No Spam -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <LinearLayout
                            android:id="@+id/card3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/glass_card_background"
                            android:clickable="true"
                            android:elevation="@dimen/card_elevation"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="40dp">

                            <!-- Icon -->
                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginEnd="32dp"
                                android:contentDescription="Phone icon"
                                android:src="@drawable/phone" />

                            <!-- Text Content -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <!-- Card title -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="12dp"
                                    android:fontFamily="sans-serif-medium"
                                    android:letterSpacing="-0.01"
                                    android:text="Your privacy?"
                                    android:textColor="#555555"
                                    android:textSize="44sp" />

                                <!-- Description -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif"
                                    android:text="No data selling. Ever."
                                    android:textColor="#555555"
                                    android:alpha="0.7"
                                    android:textSize="28sp" />

                            </LinearLayout>

                            <!-- Arrow button -->
                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="20dp"
                                android:contentDescription="Learn more"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="#555555" />

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

                <!-- Tap to get free water - Matching MainActivity "Tap to start" style with fading animation -->
                <TextView
                    android:id="@+id/gotItButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Tap to get free water!"
                    android:textSize="56sp"
                    android:textColor="#555555"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:letterSpacing="0.00"
                    android:includeFontPadding="false"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <!-- Centered Question Mark Button at Bottom with Glass Effect -->
    <FrameLayout
        android:id="@+id/questionMarkButton"
        android:layout_width="@dimen/question_button_size"
        android:layout_height="@dimen/question_button_size"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/question_button_bottom_margin"
        android:padding="@dimen/margin_medium"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:clickable="true"
        android:focusable="true"
        android:elevation="12dp">

        <!-- 3D Sphere background with pressed state -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/sphere_button_selector"
            android:duplicateParentState="true"/>

        <TextView
            android:id="@+id/questionMarkIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="?"
            android:textSize="@dimen/question_icon_size"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"/>

    </FrameLayout>

    <!-- Modal Overlay (initially hidden) -->
    <FrameLayout
        android:id="@+id/modalOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0000000"
        android:clickable="true"
        android:visibility="gone">

        <!-- Modal Content -->
        <LinearLayout
            android:id="@+id/modalContent"
            android:layout_width="@dimen/modal_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/modal_background"
            android:elevation="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/modal_padding">

            <!-- Close X Button - Top Right -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <ImageButton
                    android:id="@+id/closeModalButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Close"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:tint="#555555"
                    android:padding="12dp"/>
                
            </FrameLayout>

            <!-- Modal Title -->
            <TextView
                android:id="@+id/modalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="@dimen/margin_large"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:gravity="center"
                android:letterSpacing="0.00"
                android:text="Learn More"
                android:textColor="#555555"
                android:textSize="@dimen/modal_title_size" />

            <!-- QR Code -->
            <ImageView
                android:id="@+id/modalQrCode"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginBottom="@dimen/margin_large"
                android:background="@android:color/white"
                android:contentDescription="QR Code"
                android:padding="12dp" />

            <!-- Modal Description -->
            <TextView
                android:id="@+id/modalDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:lineSpacingExtra="8dp"
                android:lineSpacingMultiplier="1.2"
                android:text="Scan to read more details"
                android:textColor="#555555"
                android:paddingHorizontal="16dp"
                android:textSize="@dimen/modal_text_size" />

            <!-- Scan Instruction -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_large"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Scan QR code for more details"
                android:textColor="#888888"
                android:textSize="20sp"
                android:alpha="0.8" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
