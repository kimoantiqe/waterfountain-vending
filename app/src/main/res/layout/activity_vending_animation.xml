<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- 
    LAYOUT STRATEGY: Match MainActivity EXACTLY
    - Main screen has: LinearLayout with 80dp padding + gravity=center
    - Logo is 500x500dp inside that centered layout
    - We replicate this EXACT structure so logo appears in identical position
    -->

    <!-- Main Content - EXACT COPY of MainActivity structure -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="80dp"
        android:gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Magic Text - positioned ABOVE with lots of space -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Magic is happening..."
                android:textSize="72sp"
                android:textColor="#555555"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:alpha="0"
                android:layout_marginBottom="120dp"/>

            <!-- Progress Ring and HUGE Logo Container -->
            <FrameLayout
                android:id="@+id/ringContainer"
                android:layout_width="900dp"
                android:layout_height="900dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <!-- Custom Progress Ring -->
                <com.waterfountainmachine.app.views.ProgressRingView
                    android:id="@+id/progressRing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"/>

                <!-- HUGE Logo - 700dp for dramatic shrink effect -->
                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="1200dp"
                    android:layout_height="1200dp"
                    android:src="@drawable/logo"
                    android:contentDescription="@string/waterfountain_logo"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:alpha="0"/>

            </FrameLayout>

            <!-- Completion Text - positioned BELOW with lots of space -->
            <TextView
                android:id="@+id/completionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your water is ready!"
                android:textSize="68sp"
                android:textColor="#555555"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:alpha="0"
                android:layout_marginTop="120dp"
                android:letterSpacing="0.02"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Konfetti for celebration -->
    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>
