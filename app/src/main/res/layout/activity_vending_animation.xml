<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- 
    LAYOUT STRATEGY: Match MainActivity EXACTLY
    - Main screen has: LinearLayout with 80dp padding + gravity=center
    - Logo is 500x500dp inside that centered layout
    - We replicate this EXACT structure so logo appears in identical position
    -->

    <!-- Main Content - EXACT COPY of MainActivity structure -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:paddingTop="20dp"
        android:paddingBottom="40dp"
        android:gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="-260dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Progress Text - positioned ON TOP -->
            <TextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your water is on the way!"
                android:textSize="64sp"
                android:textColor="#555555"
                android:fontFamily="@font/gilroy"
                android:gravity="center"
                android:alpha="0"
                android:maxWidth="900dp"
                android:layout_marginBottom="60dp"
                android:letterSpacing="0.02"/>

            <!-- Progress Ring and HUGE Logo Container -->
            <FrameLayout
                android:id="@+id/ringContainer"
                android:layout_width="900dp"
                android:layout_height="900dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <!-- Custom Progress Ring -->
                <com.waterfountainmachine.app.views.ProgressRingView
                    android:id="@+id/progressRing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/logoImage"
                    android:layout_width="1400dp"
                    android:layout_height="1400dp"
                    android:src="@drawable/logo"
                    android:contentDescription="@string/waterfountain_logo"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:alpha="0"/>

            </FrameLayout>

            <!-- Completion Text - positioned BELOW ring -->
            <TextView
                android:id="@+id/completionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your water is ready!"
                android:textSize="68sp"
                android:textColor="#555555"
                android:fontFamily="@font/gilroy"
                android:gravity="center"
                android:alpha="0"
                android:maxWidth="900dp"
                android:layout_marginTop="60dp"
                android:letterSpacing="0.02"/>

        </LinearLayout>

    </LinearLayout>

    <!-- QR Reminder Section - Fixed at bottom, independent of centered content -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="140dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Reminder Icon -->
        <ImageView
            android:id="@+id/reminderIcon"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:src="@drawable/reminder"
            android:contentDescription="Reminder icon"
            android:scaleType="fitCenter"
            android:alpha="0"
            android:layout_marginBottom="10dp"/>

        <!-- QR Code Reminder Text -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan the QR\non the back of the can\nto keep our waters free!"
            android:textSize="42sp"
            android:textColor="#555555"
            android:fontFamily="@font/gilroy"
            android:gravity="center"
            android:alpha="0"
            android:lineHeight="52sp"
            android:maxWidth="700dp"/>

    </LinearLayout>

    <!-- Konfetti for celebration -->
    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Pickup Reminder Panel (initially hidden) -->
    <LinearLayout
        android:id="@+id/pickupReminderPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        android:gravity="center"
        android:alpha="0"
        android:translationY="50dp"
        android:visibility="gone">

        <!-- Animated Chevrons Container -->
        <LinearLayout
            android:id="@+id/chevronsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/chevron1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_chevron_down"
                android:contentDescription="Pickup indicator"
                android:layout_marginEnd="8dp"
                app:tint="#555555"/>

            <ImageView
                android:id="@+id/chevron2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_chevron_down"
                android:contentDescription="Pickup indicator"
                android:layout_marginEnd="8dp"
                app:tint="#555555"/>

            <ImageView
                android:id="@+id/chevron3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_chevron_down"
                android:contentDescription="Pickup indicator"
                app:tint="#555555"/>

        </LinearLayout>

        <!-- Shimmer overlay for purple accent effect -->
        <View
            android:id="@+id/shimmerOverlay"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="-64dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/shimmer_gradient"
            android:alpha="0"/>

        <!-- Primary Text -->
        <TextView
            android:id="@+id/pickupPrimaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your water is ready!"
            android:textSize="44sp"
            android:textColor="#555555"
            android:fontFamily="@font/gilroy"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <!-- Secondary Text -->
        <TextView
            android:id="@+id/pickupSecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check the pickup door below"
            android:textSize="32sp"
            android:textColor="#555555"
            android:alpha="0.7"
            android:fontFamily="@font/gilroy"
            android:gravity="center"
            android:lineHeight="40sp"/>

    </LinearLayout>

</FrameLayout>
