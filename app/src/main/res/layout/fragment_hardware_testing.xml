<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hardware Testing"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"/>

        <!-- Status -->
        <TextView
            android:id="@+id/hardwareStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hardware Status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="#E3F2FD"
            android:layout_marginBottom="16dp"/>

        <!-- Connection Test -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connection Test"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/testConnectionButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”Œ Test Connection"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/clearFaultsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”§ Clear Faults"
                    android:backgroundTint="#FF9800"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Slot Testing (48 slots in 6 rows) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Slot Testing (48 slots in 6 rows)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valid slots: 1-8, 11-18, 21-28, 31-38, 41-48, 51-58"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp"/>

                <!-- Slots container will be dynamically populated -->
                <LinearLayout
                    android:id="@+id/slotsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/testAllSlotsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§ª Test All 48 Slots"
                    android:backgroundTint="#4CAF50"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Test Results -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Results"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/testResultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No tests run yet"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:padding="12dp"
                    android:background="#F5F5F5"
                    android:minHeight="150dp"
                    android:gravity="top"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
