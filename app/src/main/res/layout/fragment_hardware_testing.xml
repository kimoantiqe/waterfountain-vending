<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hardware Testing"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"/>

        <!-- Status -->
        <TextView
            android:id="@+id/hardwareStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hardware Status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="#E3F2FD"
            android:layout_marginBottom="16dp"/>

        <!-- Connection Test -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connection Test"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/testConnectionButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”Œ Test Connection"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/clearFaultsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”§ Clear Faults"
                    android:backgroundTint="#FF9800"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Lane Testing -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lane Testing"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/testLane1Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lane 1"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/testLane2Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lane 2"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/testLane3Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lane 3"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/testLane4Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lane 4"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/testLane5Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lane 5"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/testLane6Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lane 6"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/testLane7Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lane 7"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/testLane8Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lane 8"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/testAllLanesButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§ª Test All Lanes"
                    android:backgroundTint="#4CAF50"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Test Results -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Results"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/testResultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No tests run yet"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:padding="12dp"
                    android:background="#F5F5F5"
                    android:minHeight="150dp"
                    android:gravity="top"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
