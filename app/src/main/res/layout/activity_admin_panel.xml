<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background" />

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/black_80"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Exit Button -->
        <ImageButton
            android:id="@+id/exitButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circular_button_background"
            android:src="@drawable/ic_close"
            android:contentDescription="Exit Admin Panel" />

        <!-- Title -->
        <TextView
            android:id="@+id/panelTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Admin Panel"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Status Indicator -->
        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/status_indicator_connected"
            android:layout_marginEnd="16dp" />

    </LinearLayout>

    <!-- Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/black_60"
        app:layout_constraintTop_toBottomOf="@id/header">

        <Button
            android:id="@+id/connectionButton"
            style="@style/NavButtonStyle"
            android:text="Connection"
            android:drawableTop="@drawable/ic_wifi" />

        <Button
            android:id="@+id/hardwareButton"
            style="@style/NavButtonStyle"
            android:text="Hardware"
            android:drawableTop="@drawable/ic_settings" />

        <Button
            android:id="@+id/logsButton"
            style="@style/NavButtonStyle"
            android:text="Logs"
            android:drawableTop="@drawable/ic_list" />

        <Button
            android:id="@+id/systemButton"
            style="@style/NavButtonStyle"
            android:text="System"
            android:drawableTop="@drawable/ic_system" />

    </LinearLayout>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/navigationBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
