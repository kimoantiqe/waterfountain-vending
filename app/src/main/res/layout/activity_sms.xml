<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/main_screen_padding">

        <!-- Header with Back Button and Centered Wordmark -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:baselineAligned="false">

            <!-- Back Button - vertically centered with wordmark -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="@dimen/back_button_size"
                android:layout_height="@dimen/back_button_size"
                android:layout_marginTop="8dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back_button"
                android:src="@drawable/ic_arrow_back"
                android:alpha="0.9"
                android:padding="@dimen/back_button_padding"
                android:scaleType="fitCenter"
                app:tint="@android:color/white" />

            <!-- Centered Wordmark Only (20% smaller for screens with back button) -->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/wordmark_text"
                android:contentDescription="@string/waterfountain_wordmark"
                android:textSize="96sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/century_gothic_bold"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:letterSpacing="-0.05"
                android:includeFontPadding="false"
                android:paddingHorizontal="16dp"
                android:shadowColor="#30000000"
                android:shadowDx="0"
                android:shadowDy="3"
                android:shadowRadius="6" />

            <!-- Empty space to balance the back button -->
            <View
                android:layout_width="@dimen/back_button_size"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- Main Content Area - SMS specific content goes here -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Top Spacer - smaller weight to push group up from center -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"/>

                <!-- Grouped Form Container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <!-- Step Indicator (moved inside group) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Step 1 of 2"
                        android:textSize="34sp"
                        android:textColor="#666666"
                        android:fontFamily="@font/gilroy"
                        android:gravity="center"
                        android:layout_marginBottom="28dp"
                        android:letterSpacing="0.02"/>

                    <!-- Title -->
                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter Phone Number"
                        android:textSize="54sp"
                        android:textColor="#555555"
                        android:fontFamily="@font/gilroy"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="20dp"/>

                    <!-- Phone Display in a Glass Box - Bigger size with show/hide toggle -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="600dp"
                            android:background="@drawable/glass_phone_display_background"
                            android:gravity="center"
                            android:paddingHorizontal="52dp"
                            android:paddingVertical="32dp"
                            android:elevation="8dp">

                            <TextView
                                android:id="@+id/phoneDisplay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="48sp"
                                android:textColor="#555555"
                                android:fontFamily="@font/gilroy"
                                android:gravity="center"
                                android:letterSpacing="0.08"
                                android:minWidth="480dp"/>

                        </LinearLayout>

                        <!-- Show/Hide Toggle Button -->
                        <ImageButton
                            android:id="@+id/togglePhoneVisibility"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="14dp"
                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_eye_off"
                            android:contentDescription="Hide phone number"
                            android:alpha="1.0"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            app:tint="#555555"/>

                    </FrameLayout>

                    <!-- Subtitle -->
                    <TextView
                        android:id="@+id/subtitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="We'll send you a verification code"
                        android:textSize="40sp"
                        android:textColor="#555555"
                        android:alpha="0.7"
                        android:fontFamily="@font/gilroy"
                        android:gravity="center"
                        android:layout_marginBottom="40dp"/>

            <!-- Bigger On-Screen Keypad with Glass Effect -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <!-- Row 1: 1, 2, 3 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn1"
                        style="@style/GlassKeypadButtonStyle"
                        android:text="1"
                        android:layout_marginEnd="24dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn2"
                        style="@style/GlassKeypadButtonStyle"
                        android:text="2"
                        android:layout_marginEnd="24dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn3"
                        style="@style/GlassKeypadButtonStyle"
                        android:text="3"/>

                </LinearLayout>

                <!-- Row 2: 4, 5, 6 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn4"
                        style="@style/GlassKeypadButtonStyle"
                        android:text="4"
                        android:layout_marginEnd="24dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn5"
                        style="@style/GlassKeypadButtonStyle"
                        android:text="5"
                        android:layout_marginEnd="24dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn6"
                        style="@style/GlassKeypadButtonStyle"
                        android:text="6"/>

                </LinearLayout>

                <!-- Row 3: 7, 8, 9 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn7"
                        style="@style/GlassKeypadButtonStyle"
                        android:text="7"
                        android:layout_marginEnd="24dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn8"
                        style="@style/GlassKeypadButtonStyle"
                        android:text="8"
                        android:layout_marginEnd="24dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn9"
                        style="@style/GlassKeypadButtonStyle"
                        android:text="9"/>

                </LinearLayout>

                <!-- Row 4: Clear, 0, Backspace -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnClear"
                        android:layout_width="@dimen/keypad_button_size"
                        android:layout_height="@dimen/keypad_button_size"
                        android:layout_marginEnd="24dp"
                        android:background="@drawable/glass_keypad_button_selector"
                        android:src="@drawable/ic_clear"
                        android:scaleType="fitCenter"
                        android:padding="30dp"
                        android:contentDescription="Clear"
                        android:elevation="0dp"
                        app:tint="#555555"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn0"
                        style="@style/GlassKeypadButtonStyle"
                        android:text="0"
                        android:layout_marginEnd="24dp"/>

                    <ImageButton
                        android:id="@+id/btnBackspace"
                        android:layout_width="@dimen/keypad_button_size"
                        android:layout_height="@dimen/keypad_button_size"
                        android:background="@drawable/glass_keypad_button_selector"
                        android:src="@drawable/ic_backspace"
                        android:scaleType="fitCenter"
                        android:padding="30dp"
                        android:contentDescription="Backspace"
                        android:elevation="0dp"
                        app:tint="#555555"/>

                </LinearLayout>

            </LinearLayout>

                    <!-- Main Action Buttons -->
                    <!-- Send Code Button (Step 1) with Loading -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp">
                        
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/verifyButton"
                            android:layout_width="@dimen/action_button_width"
                            android:layout_height="@dimen/action_button_height"
                            android:background="@drawable/glass_action_button_purple"
                            android:text="Send Code"
                            android:textSize="@dimen/action_button_text_size"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/gilroy"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:enabled="false"
                            android:elevation="8dp"/>
                        
                        <!-- Loading Spinner (shows during API call) - overlaid on button -->
                        <ProgressBar
                            android:id="@+id/loadingSpinner"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center"
                            android:indeterminateTint="#8B7BA8"
                            android:elevation="2dp"
                            android:visibility="gone"/>
                        
                    </FrameLayout>

                </LinearLayout>

                <!-- Bottom Spacer - larger weight to push group up -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Centered Question Mark Button at Bottom with Glass Effect -->
    <FrameLayout
        android:id="@+id/questionMarkButton"
        android:layout_width="@dimen/question_button_size"
        android:layout_height="@dimen/question_button_size"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="40dp"
        android:padding="@dimen/margin_medium"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:clickable="true"
        android:focusable="true"
        android:elevation="12dp">

        <!-- 3D Sphere background with pressed state (now using PNG) -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/sphere_button_selector"
            android:scaleType="fitCenter"
            android:duplicateParentState="true"
            android:contentDescription="Help button"/>

    </FrameLayout>

    <!-- Modal Overlay (initially hidden) -->
    <FrameLayout
        android:id="@+id/modalOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0000000"
        android:visibility="gone"
        android:clickable="true">

        <!-- Modal Content -->
        <LinearLayout
            android:id="@+id/modalContent"
            android:layout_width="@dimen/modal_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/modal_background"
            android:orientation="vertical"
            android:padding="@dimen/modal_padding"
            android:gravity="center"
            android:elevation="16dp"
            android:animateLayoutChanges="true">

            <!-- Header with Title and Close Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_large">

                <!-- Modal Title - Centered -->
                <TextView
                    android:id="@+id/modalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="FAQ"
                    android:textSize="@dimen/modal_title_size"
                    android:textColor="#555555"
                    android:fontFamily="@font/gilroy"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:letterSpacing="0.00"/>

                <!-- Close X Button - Top Right -->
                <ImageButton
                    android:id="@+id/closeModalButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Close"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:tint="#555555"
                    android:padding="12dp"/>

            </RelativeLayout>

            <!-- Accordion FAQ Section -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="500dp"
                android:layout_marginBottom="@dimen/margin_large"
                android:fillViewport="false"
                android:scrollbars="none"
                android:fadeScrollbars="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:animateLayoutChanges="true">

                    <!-- FAQ Item 1: How it works -->
                    <LinearLayout
                        android:id="@+id/faq1Container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/faq_card_background"
                        android:padding="24dp"
                        android:layout_marginBottom="16dp"
                        android:elevation="4dp">

                        <LinearLayout
                            android:id="@+id/faq1Header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/faq_card_ripple"
                            android:paddingVertical="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="How it works"
                                android:textSize="24sp"
                                android:textColor="#8B7BA8"
                                android:fontFamily="@font/gilroy"
                                android:textStyle="bold"
                                android:gravity="start"/>

                            <ImageView
                                android:id="@+id/faq1Chevron"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@drawable/ic_chevron_down"
                                app:tint="#8B7BA8"
                                android:rotation="0"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/faq1Answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="You enter your phone number, we text you a verification code. That's it."
                            android:textSize="20sp"
                            android:textColor="#2f2f2f"
                            android:fontFamily="@font/gilroy"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="6dp"
                            android:lineSpacingMultiplier="1.2"
                            android:layout_marginTop="16dp"
                            android:visibility="gone"
                            android:alpha="0"/>

                    </LinearLayout>

                    <!-- FAQ Item 2: Why it works -->
                    <LinearLayout
                        android:id="@+id/faq2Container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/faq_card_background"
                        android:padding="24dp"
                        android:layout_marginBottom="16dp"
                        android:elevation="4dp">

                        <LinearLayout
                            android:id="@+id/faq2Header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/faq_card_ripple"
                            android:paddingVertical="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Why it works"
                                android:textSize="24sp"
                                android:textColor="#8B7BA8"
                                android:fontFamily="@font/gilroy"
                                android:textStyle="bold"
                                android:gravity="start"/>

                            <ImageView
                                android:id="@+id/faq2Chevron"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@drawable/ic_chevron_down"
                                app:tint="#8B7BA8"
                                android:rotation="0"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/faq2Answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="We partner with local businesses who cover the cost by advertising on each can."
                            android:textSize="20sp"
                            android:textColor="#2f2f2f"
                            android:fontFamily="@font/gilroy"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="6dp"
                            android:lineSpacingMultiplier="1.2"
                            android:layout_marginTop="16dp"
                            android:visibility="gone"
                            android:alpha="0"/>

                    </LinearLayout>

                    <!-- FAQ Item 3: Why we need your phone number -->
                    <LinearLayout
                        android:id="@+id/faq3Container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/faq_card_background"
                        android:padding="24dp"
                        android:layout_marginBottom="16dp"
                        android:elevation="4dp">

                        <LinearLayout
                            android:id="@+id/faq3Header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/faq_card_ripple"
                            android:paddingVertical="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Why we need your phone number"
                                android:textSize="24sp"
                                android:textColor="#8B7BA8"
                                android:fontFamily="@font/gilroy"
                                android:textStyle="bold"
                                android:gravity="start"/>

                            <ImageView
                                android:id="@+id/faq3Chevron"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@drawable/ic_chevron_down"
                                app:tint="#8B7BA8"
                                android:rotation="0"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/faq3Answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="We use your number to make sure there's enough for everyone."
                            android:textSize="20sp"
                            android:textColor="#2f2f2f"
                            android:fontFamily="@font/gilroy"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="6dp"
                            android:lineSpacingMultiplier="1.2"
                            android:layout_marginTop="16dp"
                            android:visibility="gone"
                            android:alpha="0"/>

                    </LinearLayout>

                    <!-- FAQ Item 4: How many you can take -->
                    <LinearLayout
                        android:id="@+id/faq4Container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/faq_card_background"
                        android:padding="24dp"
                        android:layout_marginBottom="16dp"
                        android:elevation="4dp">

                        <LinearLayout
                            android:id="@+id/faq4Header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/faq_card_ripple"
                            android:paddingVertical="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="How many you can take"
                                android:textSize="24sp"
                                android:textColor="#8B7BA8"
                                android:fontFamily="@font/gilroy"
                                android:textStyle="bold"
                                android:gravity="start"/>

                            <ImageView
                                android:id="@+id/faq4Chevron"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@drawable/ic_chevron_down"
                                app:tint="#8B7BA8"
                                android:rotation="0"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/faq4Answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="You can get 1 free water per day.\n(Resets at midnight)"
                            android:textSize="20sp"
                            android:textColor="#2f2f2f"
                            android:fontFamily="@font/gilroy"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="6dp"
                            android:lineSpacingMultiplier="1.2"
                            android:layout_marginTop="16dp"
                            android:visibility="gone"
                            android:alpha="0"/>

                    </LinearLayout>

                    <!-- FAQ Item 5: About the water -->
                    <LinearLayout
                        android:id="@+id/faq5Container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/faq_card_background"
                        android:padding="24dp"
                        android:elevation="4dp">

                        <LinearLayout
                            android:id="@+id/faq5Header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/faq_card_ripple"
                            android:paddingVertical="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="About the water"
                                android:textSize="24sp"
                                android:textColor="#8B7BA8"
                                android:fontFamily="@font/gilroy"
                                android:textStyle="bold"
                                android:gravity="start"/>

                            <ImageView
                                android:id="@+id/faq5Chevron"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@drawable/ic_chevron_down"
                                app:tint="#8B7BA8"
                                android:rotation="0"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/faq5Answer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="We only use natural spring water sourced from right here in BC."
                            android:textSize="20sp"
                            android:textColor="#2f2f2f"
                            android:fontFamily="@font/gilroy"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="6dp"
                            android:lineSpacingMultiplier="1.2"
                            android:layout_marginTop="16dp"
                            android:visibility="gone"
                            android:alpha="0"/>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <!-- More Details Button -->
            <TextView
                android:id="@+id/showQrCodeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="More Details"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/gilroy"
                android:textStyle="bold"
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/more_details_ripple"
                android:layout_marginBottom="@dimen/margin_medium"/>

        </LinearLayout>

    </FrameLayout>

    <!-- QR Code Modal Overlay (initially hidden) -->
    <FrameLayout
        android:id="@+id/qrModalOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0000000"
        android:visibility="gone"
        android:clickable="true">

        <!-- QR Code Modal Content -->
        <LinearLayout
            android:id="@+id/qrModalContent"
            android:layout_width="@dimen/modal_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/modal_background"
            android:orientation="vertical"
            android:padding="@dimen/modal_padding"
            android:gravity="center"
            android:elevation="16dp">

            <!-- Header with Title and Close Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_large">

                <!-- QR Code Title - Centered -->
                <TextView
                    android:id="@+id/qrModalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Learn More"
                    android:textSize="@dimen/modal_title_size"
                    android:textColor="#555555"
                    android:fontFamily="@font/gilroy"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <!-- Close X Button - Top Right -->
                <ImageButton
                    android:id="@+id/closeQrModalButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Close"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:tint="#555555"
                    android:padding="12dp"/>

            </RelativeLayout>

            <!-- QR Code Image -->
            <ImageView
                android:id="@+id/qrCodeImage"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:contentDescription="QR Code"
                android:layout_marginBottom="@dimen/margin_medium"/>

            <!-- QR Code Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan this QR code with your phone\nto learn more about our service"
                android:textSize="@dimen/modal_text_size"
                android:textColor="#666666"
                android:fontFamily="@font/gilroy"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Or Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or visit this link:"
                android:textSize="@dimen/modal_text_size"
                android:textColor="#888888"
                android:fontFamily="@font/gilroy"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- Link -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.waterfountain.io"
                android:textSize="28sp"
                android:textColor="#8B7BA8"
                android:fontFamily="@font/gilroy"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="@dimen/margin_large"/>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
