<?xml version="1.0" encoding="utf-8"?>
<!--
   Backup rules for Android API <31 (legacy Auto Backup)
   For API 31+, see data_extraction_rules.xml
   See https://developer.android.com/guide/topics/data/autobackup
-->
<full-backup-content>
    <!-- Exclude encrypted SharedPreferences (contains sensitive settings) -->
    <exclude domain="sharedpref" path="system_settings_encrypted.xml"/>
    
    <!-- Exclude certificate storage (contains machine certificates) -->
    <exclude domain="sharedpref" path="certificate_storage.xml"/>
    
    <!-- Exclude all encrypted preferences -->
    <exclude domain="sharedpref" path="*_encrypted.xml"/>
</full-backup-content>