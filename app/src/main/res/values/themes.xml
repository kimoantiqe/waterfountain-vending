<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WaterFountainMachine" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize Material colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    
    <!-- Admin Panel Styles -->
    <style name="KeypadButtonStyle">
        <item name="android:layout_width">@dimen/keypad_button_size</item>
        <item name="android:layout_height">@dimen/keypad_button_size</item>
        <item name="android:layout_margin">@dimen/keypad_button_margin</item>
        <item name="android:background">@drawable/circular_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_keypad</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">@dimen/keypad_elevation</item>
    </style>
    
    <style name="NavButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white_70</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:padding">8dp</item>
    </style>
    
    <style name="AdminButtonStyle">
        <item name="android:layout_height">@dimen/admin_button_height</item>
        <item name="android:background">@drawable/admin_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/admin_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">2dp</item>
    </style>
    
    <!-- Glass Keypad Button Style - Uses Widget.AppCompat to support custom backgrounds -->
    <style name="GlassKeypadButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/keypad_button_size</item>
        <item name="android:layout_height">@dimen/keypad_button_size</item>
        <item name="android:background">@drawable/glass_keypad_button_selector</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">@dimen/text_size_keypad</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">0dp</item>
    </style>
    
    <!-- Glass Action Button Style -->
    <style name="GlassActionButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/glass_action_button_selector</item>
        <item name="android:textColor">#555555</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">0dp</item>
    </style>

</resources>