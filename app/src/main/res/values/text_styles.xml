<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Wordmark Text Style Base -->
    <style name="WordmarkTextStyle">
        <item name="android:fontFamily">@font/century_gothic_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>
    
    <!-- Large Wordmark (for main screen) -->
    <style name="WordmarkTextStyle.Large">
        <item name="android:textSize">110sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- Medium Wordmark (for headers) -->
    <style name="WordmarkTextStyle.Medium">
        <item name="android:textSize">68sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- Small Wordmark (for small headers) -->
    <style name="WordmarkTextStyle.Small">
        <item name="android:textSize">56sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
