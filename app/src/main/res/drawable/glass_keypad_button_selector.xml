<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed state - bright light-up effect -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Outer glow when pressed -->
            <item android:left="-3dp" android:top="-3dp" android:right="-3dp" android:bottom="-3dp">
                <shape android:shape="rectangle">
                    <corners android:radius="19dp"/>
                    <solid android:color="#33FFFFFF"/>
                </shape>
            </item>
            
            <!-- Brighter base when pressed -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"/>
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#70FFFFFF"
                        android:endColor="#50FFFFFF"/>
                    <stroke android:width="1.5dp" android:color="#B3FFFFFF"/>
                </shape>
            </item>
            
            <!-- Brighter top highlight -->
            <item android:height="1dp" android:gravity="top">
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/>
                    <solid android:color="#40FFFFFF"/>
                </shape>
            </item>
            
            <!-- Center glow when pressed -->
            <item android:left="30dp" android:top="30dp" android:right="30dp" android:bottom="30dp">
                <shape android:shape="oval">
                    <gradient
                        android:type="radial"
                        android:gradientRadius="60dp"
                        android:startColor="#40FFFFFF"
                        android:endColor="#00FFFFFF"/>
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal state - darker design for better visibility -->
    <item>
        <layer-list>
            <!-- Shadow layer -->
            <item android:left="0dp" android:top="2dp" android:right="2dp" android:bottom="0dp">
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"/>
                    <solid android:color="#15000000"/>
                </shape>
            </item>
            
            <!-- Base glass (darker with more opacity) -->
            <item android:left="0dp" android:top="0dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"/>
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#80FFFFFF"
                        android:endColor="#65FFFFFF"/>
                    <stroke android:width="1.5dp" android:color="#B3FFFFFF"/>
                </shape>
            </item>

            <!-- Top highlight -->
            <item android:left="0dp" android:top="1dp" android:right="2dp" android:bottom="999dp">
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/>
                    <solid android:color="#40FFFFFF"/>
                </shape>
            </item>

            <!-- Gentle inner shade near bottom -->
            <item android:left="0dp" android:top="0dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="16dp"/>
                    <gradient
                        android:type="linear"
                        android:angle="270"
                        android:startColor="#00000000"
                        android:endColor="#15000000"/>
                </shape>
            </item>
        </layer-list>
    </item>
    
</selector>
