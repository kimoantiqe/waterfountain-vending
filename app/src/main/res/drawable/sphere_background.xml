<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1) Ambient outer glow (soft lavender glow) -->
    <item
        android:left="-14dp"
        android:top="-14dp"
        android:right="-14dp"
        android:bottom="-14dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="96dp"
                android:startColor="#30AFA0EE"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- 2) Base light lavender sphere with subtle gradient (r175 g170 b238) -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="56dp"
                android:startColor="#DDD8F5"
                android:endColor="#AFA0EE" />
            <stroke
                android:width="1dp"
                android:color="#90FFFFFF" />
        </shape>
    </item>

    <!-- 3) Specular highlight (small bright spot, top-left) -->
    <item
        android:left="14dp"
        android:top="12dp"
        android:right="64dp"
        android:bottom="64dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="24dp"
                android:startColor="#A0FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

    <!-- 4) Inner shadow (subtle depth, bottom-right) -->
    <item
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#00000000"
                android:endColor="#30000000" />
        </shape>
    </item>

    <!-- 5) Hairline top rim sheen -->
    <item
        android:top="2dp"
        android:bottom="999dp">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#30FFFFFF" />
        </shape>
    </item>

</layer-list>
