<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer shadow layer 1 (most diffused) - extends beyond bounds -->
    <item
        android:left="2dp"
        android:top="6dp"
        android:right="-2dp"
        android:bottom="-6dp">
        <shape android:shape="oval">
            <solid android:color="#50000000"/>
        </shape>
    </item>
    
    <!-- Outer shadow layer 2 -->
    <item
        android:left="3dp"
        android:top="7dp"
        android:right="-1dp"
        android:bottom="-4dp">
        <shape android:shape="oval">
            <solid android:color="#40000000"/>
        </shape>
    </item>
    
    <!-- Outer shadow layer 3 (closest to button) -->
    <item
        android:left="4dp"
        android:top="8dp"
        android:right="0dp"
        android:bottom="-2dp">
        <shape android:shape="oval">
            <solid android:color="#30000000"/>
        </shape>
    </item>
    
    <!-- Main glass circle with frosted background -->
    <item>
        <shape android:shape="oval">
            <!-- Lighter glass effect with more transparency -->
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#70FFFFFF"
                android:centerColor="#60FFFFFF"
                android:endColor="#50FFFFFF"/>
            
            <!-- Subtle glass border -->
            <stroke
                android:width="1dp"
                android:color="#60FFFFFF"/>
        </shape>
    </item>
    
    <!-- Top-left shine (glass reflection) -->
    <item
        android:left="20dp"
        android:top="15dp"
        android:right="80dp"
        android:bottom="100dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50dp"
                android:startColor="#90FFFFFF"
                android:endColor="#00FFFFFF"/>
        </shape>
    </item>
    
    <!-- Inner glow for depth -->
    <item
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#40FFFFFF"/>
        </shape>
    </item>
    
</layer-list>
