<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1) Ambient outer glow (soft white halo) -->
    <item
        android:left="-14dp"
        android:top="-14dp"
        android:right="-14dp"
        android:bottom="-14dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="96dp"
                android:startColor="#26FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

    <!-- 2) Base glass sphere (radial frost; no centerColor) -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="56dp"
                android:startColor="#66FFFFFF"
                android:endColor="#0DFFFFFF" />   <!-- faint edge -->
            <stroke
                android:width="1dp"
                android:color="#40FFFFFF" />
        </shape>
    </item>

    <!-- 3) Specular highlight (small bright spot, top-left) -->
    <item
        android:left="14dp"
        android:top="12dp"
        android:right="64dp"
        android:bottom="64dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="24dp"
                android:startColor="#BFFFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

    <!-- 4) Inner shadow (subtle depth, bottom-right) -->
    <item
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#00000000"
                android:endColor="#14000000" />
        </shape>
    </item>

    <!-- 5) Hairline top rim sheen -->
    <item
        android:top="2dp"
        android:bottom="999dp">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#1FFFFFFF" />
        </shape>
    </item>

</layer-list>
