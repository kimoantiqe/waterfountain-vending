<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Base glass with subtle frosted effect (no radial glow) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <solid android:color="#4DFFFFFF"/> <!-- Slightly more opaque for phone display -->
            <stroke android:width="1.5dp" android:color="#80FFFFFF"/>
        </shape>
    </item>

    <!-- Inner top highlight -->
    <item android:top="1dp" android:bottom="999dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="24dp" android:topRightRadius="24dp"/>
            <solid android:color="#26FFFFFF"/>
        </shape>
    </item>

</layer-list>
