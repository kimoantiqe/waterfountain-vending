<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base gradient -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#1e3c72"
                android:centerColor="#2a5298"
                android:endColor="#4facfe"/>
        </shape>
    </item>

    <!-- Dot pattern overlay -->
    <item>
        <bitmap
            android:src="@drawable/dot_pattern"
            android:tileMode="repeat"
            android:alpha="0.15"/>
    </item>
</layer-list>

