<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Ambient halo (wider & lighter) -->
    <item android:left="-6dp" android:top="-6dp" android:right="-6dp" android:bottom="-6dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="48dp"
                android:startColor="#26FFFFFF"
                android:endColor="#00FFFFFF"/>
        </shape>
    </item>

    <!-- Base glass (lighter vertical fade + brighter rim) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#40FFFFFF"
            android:endColor="#21FFFFFF"/>
            <stroke android:width="1dp" android:color="#80FFFFFF"/> <!-- brighter rim -->
        </shape>
    </item>

    <!-- 1dp top highlight (use height+gravity for reliability) -->
    <item android:height="1dp" android:gravity="top">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/>
            <solid android:color="#1EFFFFFF"/>
        </shape>
    </item>

    <!-- Gentle inner shade near bottom (lighter than before) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#00000000"
                android:endColor="#0D000000"/>  <!-- was #14 -->
        </shape>
    </item>

    <!-- Wide, soft center bloom (FIRST feather layer) -->
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="96dp"
            android:startColor="#1AFFFFFF"
            android:endColor="#00FFFFFF"/>
        </shape>
    </item>

    <!-- Bright core glint (SECOND layer on top) -->
    <item android:left="24dp" android:top="24dp" android:right="24dp" android:bottom="24dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="36dp"
                android:startColor="#40FFFFFF"
            android:endColor="#00FFFFFF"/>
        </shape>
    </item>

</layer-list>
