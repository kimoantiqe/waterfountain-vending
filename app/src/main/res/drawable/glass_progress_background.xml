<?xml version="1.0" encoding="utf-8"?>
<!-- Glass background for progress indicator container -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Light shadow layer -->
    <item android:left="0dp" android:top="2dp" android:right="2dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="32dp"/>
            <solid android:color="#18000000"/>
        </shape>
    </item>
    
    <!-- Base glass with frosted effect -->
    <item android:left="0dp" android:top="0dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="32dp"/>
            <solid android:color="#33FFFFFF"/> <!-- Semi-transparent white -->
            <stroke android:width="1.5dp" android:color="#66FFFFFF"/>
        </shape>
    </item>

    <!-- Inner top highlight -->
    <item android:left="0dp" android:top="1dp" android:right="2dp" android:bottom="999dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="32dp" android:topRightRadius="32dp"/>
            <solid android:color="#1AFFFFFF"/>
        </shape>
    </item>

</layer-list>
