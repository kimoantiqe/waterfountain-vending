<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Disabled state - darker and more subdued -->
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <solid android:color="#1A000000"/>
                    <stroke android:width="1dp" android:color="#26FFFFFF"/>
                </shape>
            </item>
            <item android:top="1dp" android:bottom="999dp">
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="20dp" android:topRightRadius="20dp"/>
                    <solid android:color="#0DFFFFFF"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Pressed state - purple glow instead of cyan -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Outer glow with purple tint -->
            <item android:left="-4dp" android:top="-4dp" android:right="-4dp" android:bottom="-4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="24dp"/>
                    <solid android:color="#30AFA0EE"/>
                </shape>
            </item>
            <item android:left="-2dp" android:top="-2dp" android:right="-2dp" android:bottom="-2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="22dp"/>
                    <solid android:color="#40C4B5F2"/>
                </shape>
            </item>
            <!-- Base glass with purple tint -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <solid android:color="#85FFFFFF"/>
                    <stroke android:width="2dp" android:color="#B3C4B5F2"/>
                </shape>
            </item>
            <!-- Top highlight -->
            <item android:top="1dp" android:bottom="999dp">
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="20dp" android:topRightRadius="20dp"/>
                    <solid android:color="#40FFFFFF"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Enabled state - darker glass for better visibility with border -->
    <item android:state_enabled="true">
        <layer-list>
            <!-- Shadow layer -->
            <item android:left="0dp" android:top="2dp" android:right="2dp" android:bottom="0dp">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <solid android:color="#20000000"/>
                </shape>
            </item>
            <!-- Base glass with more opacity and border -->
            <item android:left="0dp" android:top="0dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="20dp"/>
                    <solid android:color="#80FFFFFF"/>
                    <stroke android:width="2dp" android:color="#B3FFFFFF"/>
                </shape>
            </item>
            <!-- Top highlight -->
            <item android:left="0dp" android:top="1dp" android:right="2dp" android:bottom="999dp">
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="20dp" android:topRightRadius="20dp"/>
                    <solid android:color="#40FFFFFF"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
