<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state - lights up -->
    <item android:state_pressed="true" android:drawable="@drawable/sphere_background_pressed" />
    
    <!-- Focused state - lights up when navigated with keyboard/remote -->
    <item android:state_focused="true" android:drawable="@drawable/sphere_background_pressed" />
    
    <!-- Default state - normal sphere -->
    <item android:drawable="@drawable/sphere_background" />
</selector>
