<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 1) Brighter ambient outer glow (light lavender halo when pressed) -->
    <item
        android:left="-14dp"
        android:top="-14dp"
        android:right="-14dp"
        android:bottom="-14dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="96dp"
                android:startColor="#50AFA0EE"
                android:endColor="#00AFA0EE" />
        </shape>
    </item>

    <!-- 2) Brighter lavender sphere (more intense glow when pressed) -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="56dp"
                android:startColor="#E8E0F8"
                android:endColor="#C4B5F2" />
            <stroke
                android:width="1dp"
                android:color="#80FFFFFF" />
        </shape>
    </item>

    <!-- 3) Enhanced specular highlight (brighter spot when pressed) -->
    <item
        android:left="14dp"
        android:top="12dp"
        android:right="64dp"
        android:bottom="64dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="24dp"
                android:startColor="#E6FFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

    <!-- 4) Reduced inner shadow (less depth when pressed/lit) -->
    <item
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#00000000"
                android:endColor="#0A000000" />
        </shape>
    </item>

    <!-- 5) Brighter top rim sheen -->
    <item
        android:top="2dp"
        android:bottom="999dp">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#40FFFFFF" />
        </shape>
    </item>

</layer-list>
