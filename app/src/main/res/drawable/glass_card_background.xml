<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base glass tint -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="22dp"/>
            <solid android:color="#70FFFFFF"/> <!-- ~8% white -->
            <stroke android:width="1dp" android:color="#90FFFFFF"/> <!-- faint white border -->
        </shape>
    </item>

    <!-- Inner top highlight (1px) -->
    <item android:top="1dp" android:bottom="999dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="22dp" android:topRightRadius="22dp"/>
            <solid android:color="#1FFFFFFF"/> <!-- ~12% white line -->
        </shape>
    </item>

    <!-- Optional: subtle inner shadow at bottom -->
    <item android:top="999dp">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="22dp" android:bottomRightRadius="22dp"/>
            <solid android:color="#0D000000"/> <!-- ~5% black line -->
        </shape>
    </item>
</layer-list>
