<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Subtle drop shadow -->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="22dp"/>
            <solid android:color="#15000000"/> <!-- Very soft shadow with ~8% opacity -->
        </shape>
    </item>

    <!-- Base card with light pinkish-purple-blue hue -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="22dp"/>
            <solid android:color="#F2F5FDFF"/> <!-- Light periwinkle/lavender white with 95% opacity -->
            <stroke android:width="1dp" android:color="#20000000"/> <!-- very subtle border -->
        </shape>
    </item>

    <!-- Inner top highlight (very subtle) -->
    <item android:top="1dp" android:bottom="999dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="22dp" android:topRightRadius="22dp"/>
            <solid android:color="#08FFFFFF"/> <!-- extremely subtle white highlight -->
        </shape>
    </item>

</layer-list>
