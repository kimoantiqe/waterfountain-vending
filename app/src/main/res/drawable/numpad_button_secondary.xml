<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4DFF6B35"
                android:endColor="#26FF5722"
                android:angle="45"/>
            <corners android:radius="24dp"/>
            <stroke android:width="2dp" android:color="#80FF5722"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#26FF5722"
                android:endColor="#0DFF5722"
                android:angle="45"/>
            <corners android:radius="24dp"/>
            <stroke android:width="1dp" android:color="#40FF5722"/>
        </shape>
    </item>
</selector>

