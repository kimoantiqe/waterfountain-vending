<?xml version="1.0" encoding="utf-8"?>
<!-- Active step indicator - filled circle with number -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow layer -->
    <item android:left="0dp" android:top="2dp" android:right="2dp" android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="#30000000"/>
            <size android:width="56dp" android:height="56dp"/>
        </shape>
    </item>
    
    <!-- Main circle - filled with purple -->
    <item android:left="0dp" android:top="0dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#8B7BA8"/> <!-- Your purple accent color -->
            <size android:width="56dp" android:height="56dp"/>
        </shape>
    </item>
    
    <!-- Subtle inner glow -->
    <item android:left="4dp" android:top="4dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="oval">
            <solid android:color="#20FFFFFF"/>
        </shape>
    </item>
    
</layer-list>
