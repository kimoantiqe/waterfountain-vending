<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#60000000"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>
    
    <!-- Main background with gradient -->
    <item
        android:bottom="4dp"
        android:left="0dp"
        android:right="4dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#263238"
                android:centerColor="#37474F"
                android:endColor="#455A64"
                android:type="linear"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
    <!-- Glass overlay effect -->
    <item
        android:bottom="4dp"
        android:left="0dp"
        android:right="4dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#20FFFFFF"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
    
    <!-- Border -->
    <item
        android:bottom="4dp"
        android:left="0dp"
        android:right="4dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#80FFFFFF"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>
</layer-list>

