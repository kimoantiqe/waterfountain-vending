<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40AFA0EE">
    <item>
        <layer-list>
            <!-- Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#30000000"/>
                    <corners android:radius="30dp"/>
                </shape>
            </item>
            
            <!-- Main button with lavender purple gradient -->
            <item
                android:bottom="3dp"
                android:left="0dp"
                android:right="3dp"
                android:top="0dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:startColor="#C4B5F2"
                        android:endColor="#AFA0EE"
                        android:type="linear"/>
                    <corners android:radius="28dp"/>
                </shape>
            </item>
            
            <!-- Glass highlight -->
            <item
                android:bottom="3dp"
                android:left="0dp"
                android:right="3dp"
                android:top="0dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:startColor="#30FFFFFF"
                        android:centerColor="#00FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:type="linear"/>
                    <corners android:radius="28dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
