<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow layer with stronger purple tint -->
    <item android:left="0dp" android:top="2dp" android:right="2dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#208B7BA8"/>
        </shape>
    </item>
    
    <!-- Base frosted glass card with purple tint -->
    <item android:left="0dp" android:top="0dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#33FFFFFF"/>
            <stroke android:width="1.5dp" android:color="#60A395BD"/>
        </shape>
    </item>

    <!-- Top highlight for glass effect -->
    <item android:left="0dp" android:top="1dp" android:right="2dp" android:bottom="999dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp"/>
            <solid android:color="#26FFFFFF"/>
        </shape>
    </item>
    
    <!-- Subtle purple overlay -->
    <item android:left="0dp" android:top="0dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#0D8B7BA8"/>
        </shape>
    </item>

</layer-list>
